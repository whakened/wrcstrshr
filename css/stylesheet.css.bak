body {
    background-color: #333;
    text-align: center;
    font-family: "Inter", sans-serif;
    padding: 70px 100px;
}
.horiz-center {
    margin: auto;
    text-align: center;
}
.clearfix::after {
    content: "";
    clear: both;
    display: table;
}
.c0 {
    background-color: #101119;
}
.c1 {
    background-color: #181925;
}
.c2 {
    background-color: #4b0066;
}
.c5 {
    background-color: #f5f3f5;
}
.text-c4 {
    color: #bd3ce8;
    font-weight: 500;
}
.text-c5 {
    color: #f5f3f5;
    font-weight: 100;
}
.text-white-bg {
    background-color: #f5f3f5;
    color: #101119;
    width: calc(100% - 100px);
    margin-left: 50px;
}
.label {
    letter-spacing: 5px;
    margin-left: 100px;
    width: calc(100% - 200px);
}
.large-container {
    margin-top: 50px;
    margin-bottom: 0px;
    padding-top: 5px;
    padding-bottom: 5px;
}
.fancy-text {
	animation: fancyText 5s ease-in-out infinite;
	background: linear-gradient(-60deg, #bd3ce8, #bd3ce8, #f5f3f5, #bd3ce8, #f5f3f5);
	background-size: 300%;

	-webkit-background-clip: text;
		background-clip: text;
	-webkit-text-fill-color: transparent;
    font-weight: 500;
}
@keyframes fancyText {
	0% {
		background-position: 50% 50%;
	}
	50% {
		background-position: 100% 50%;
	}
	100% {
		background-position: 200% 50%;
	}
}
